{
	"compilerOptions": {
        "jsx": "react",
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "dist",
		"lib": [
			"ES2020",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
